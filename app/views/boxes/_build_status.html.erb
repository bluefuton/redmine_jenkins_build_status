<style type="text/css">
    .jenkins-build-status {
        color: white;
        text-align: center;
        font-size: 16px;
        opacity: 0.7;        
    }
    .jenkins-build-status a {
        color: white;
    }
    .passed {
        background-color: green;
    }
    .building {
        background-color: #FF7E00;
    }
    .failed {
        background-color: red;
    }
    .disabled a, .unavailable a {
        color: #000;
    }
</style>

<div class="jenkins-build-status box <%= build_status['status'].to_s %>">
    <a href="<%= build_status['url'] %>" target="_blank">
        <% unless build_status['status'] == :building %>
            Tests <%= build_status['status'].to_s %>
        <% else %>
            Build in progress
        <% end %>
    </a>
</div>
<% if box_position == "top" %>
    <script type="text/javascript">
        Event.observe(document, "dom:loaded", function() {
            $$('.splitcontentright').first().insert({top : $$('.jenkins-build-status').first()})
        });
    </script>
<% end %>
